datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int     @id @default(autoincrement())
  email     String  @unique
  password  String
  firstName String? @default("") @map("first_name")
  lastName  String? @default("") @map("last_name")
  role      Role?   @relation(fields: [roleId], references: [id])
  token     Token?
  roleId    Int?

  @@map("users")
}

model Token {
  id        Int    @id @default(autoincrement())
  token     String
  userEmail String @unique @map("user_email")
  user      User   @relation(fields: [userEmail], references: [email])

  @@map("users_tokens")
}

model Role {
  id          Int    @id @default(autoincrement())
  title       String @unique
  permissions Int    @default(1)
  users       User[]

  @@map("roles")
}

model Category {
  id          Int                  @id @default(autoincrement())
  title       String
  description String?              @default("")
  dishes      CategoriesOnDishes[]

  @@map("categories")
}

model Dish {
  id          Int                   @id @default(autoincrement())
  title       String
  description String?               @default("")
  categories  CategoriesOnDishes[]
  ingredients DishesOnIngredients[]

  @@map("dishes")
}

model Ingredient {
  id          Int                   @id @default(autoincrement())
  title       String
  description String?               @default("")
  dishes      DishesOnIngredients[]

  @@map("ingredients")
}

model CategoriesOnDishes {
  categoryId Int
  dishId     Int
  category   Category @relation(fields: [categoryId], references: [id])
  dish       Dish     @relation(fields: [dishId], references: [id])

  @@id([categoryId, dishId])
  @@map("categories_on_dishes")
}

model DishesOnIngredients {
  dishId       Int
  ingredientId Int
  dish         Dish       @relation(fields: [dishId], references: [id])
  ingredient   Ingredient @relation(fields: [ingredientId], references: [id])

  @@id([dishId, ingredientId])
  @@map("dishes_on_ingidients")
}
